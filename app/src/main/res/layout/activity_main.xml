<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw_layout"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:animateLayoutChanges="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <FrameLayout
                android:id="@+id/frame_cotainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        android:animateLayoutChanges="true" >

    </android.support.design.widget.NavigationView>

    <RelativeLayout
        android:id="@+id/welcome_message_layout"
        android:layout_width="402dp"
        android:layout_height="603dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#036e64"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="16dp"
            android:text="Welcome to Fees Manager"
            android:textColor="#ddd"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/welcome_messgae"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_title"
            android:layout_marginTop="45dp"
            android:text="Fees Manager is a application that provides the facility to see your Fees Structure anytime and anywhere by students and their parents."
            android:textColor="#ddd"
            android:textSize="18sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="#3b978d"
            android:onClick="dismisWelcomeMessageBox"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Got It"
            android:textColor="#fff" />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ddd"
    android:visibility="invisible"
    >

    <Button

        android:id="@+id/student"
        android:layout_width="343dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="341dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/mybutton"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/student"
        android:textSize="30sp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/admin"
        android:layout_width="343dp"
        android:layout_height="90dp"
        android:layout_below="@+id/student"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/mybutton"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/admin"
        android:textSize="30sp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/parent"
        android:layout_width="343dp"
        android:layout_height="90dp"
        android:layout_below="@+id/student"
        android:layout_alignBottom="@+id/student"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/mybutton"
        android:fontFamily="sans-serif-smallcaps"
        android:text="parents"
        android:textSize="30sp"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="173dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/bkbirla" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="251dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="B.K Birla College,Kalyan(W)                      \n        (Computer Science)"
        android:textColor="#000000"

        android:textSize="23sp"
        android:textStyle="bold"
        app:fontFamily="serif" />


</RelativeLayout>



</android.support.v4.widget.DrawerLayout>